<UserControl x:Class="Night_Launcher.Tabs.Builds"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Night_Launcher.Tabs"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border Background="Gray" CornerRadius="35" BorderThickness="10" Height="75" Margin="5" x:Name="BoredBuild">
            <Grid>
                <Button Content="Play" Margin="0,10,20,0" VerticalAlignment="Top" HorizontalAlignment="Right" Background="DarkGray" Click="Button_Click"/>
                <Button Content="Remove" Margin="0,10,70,0" VerticalAlignment="Top" HorizontalAlignment="Right" Background="DarkGray"/>
                <Label Content="[VERSION NAME]" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="38" Foreground="White" FontStyle="Normal" FontFamily="Arial Black"/>
                <Image VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15,0,0,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
