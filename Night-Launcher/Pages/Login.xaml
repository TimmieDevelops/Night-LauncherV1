<UserControl x:Class="Night_Launcher.Pages.Login"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Night_Launcher.Pages"
             mc:Ignorable="d" 
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <ui:CardControl Content="" Height="300" IsEnabled="False" HorizontalAlignment="Center" Width="500"/>
        <ui:TextBox x:Name="EmailBox" PlaceholderText="Please enter your email here..." Width="470" Margin="165,155,165,255"/>
        <ui:PasswordBox x:Name="PasswordBox" PlaceholderText="Please enter your password here..." Width="470" Margin="165,245,165,0" VerticalAlignment="Top"/>
        <ui:Button Content="Login" Margin="332,300,0,0" VerticalAlignment="Top" Height="55" Width="123" Click="Login_Click"/>
        <Label Content="Login Screen" FontSize="38" Foreground="White" HorizontalAlignment="Left" Margin="294,85,0,305"/>
    </Grid>
</UserControl>
